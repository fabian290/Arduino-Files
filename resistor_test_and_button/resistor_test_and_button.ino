const int buttonPin = 2; // the number of the ushbutton pin
const int ledPin = 13; // the number of the LED pn

int buttonState = 0;

void setup() {

  pinMode(ledPin, OUTPUT);
  pinMode(buttonPin, INPUT);
}

void loop() {

  buttonState = digitalRead(buttonPin);
  
// checks f  the pushbutton is pressed; if it is then the buttonState is HIGH
if (buttonState == HIGH) {

  digitalWrite(ledPin, HIGH);
  
} else {

   digitalWrite(ledPin, LOW);
}

  
}
